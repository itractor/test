<% if logged_in? %>
  <!-- Content for logged-in users -->
  <h1>Welcome back, <%= current_user.email %>!</h1>
<% else %>
  <!-- Login form for non-logged-in users -->
  <h2>Please Log In</h2>
  <%= form_with(url: login_path, method: :post) do |form| %>
    <%= form.label :email %>
    <%= form.email_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Log in" %>
  <% end %>
<% end %>